
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextAppearanceHeader">
        <item name="android:layout_height">@dimen/header_title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/header_text_Size</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SwitchAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/header_margin</item>
        <item name="android:textSize">@dimen/switch_text_Size</item>
    </style>
</resources>